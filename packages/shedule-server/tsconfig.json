{

  "compilerOptions": {
    "isolatedModules": true,
    "skipLibCheck": true,

    "module": "ES2020",

    "esModuleInterop": true,
    "target": "ES6",

    "moduleResolution": "node",

    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "lib": ["ESNext"]
  },
  "include": ["src"],
  "exclude": [
    "generated",
    "public/utils"
  ]
}
